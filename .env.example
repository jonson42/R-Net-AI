# R-Net AI Environment Configuration

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
MODEL_NAME=gpt-4-vision-preview
MAX_TOKENS=4096
TEMPERATURE=0.7

# Backend Server Configuration
HOST=127.0.0.1
PORT=8000
DEBUG=True
LOG_LEVEL=INFO

# File Upload Settings
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,webp
UPLOAD_DIR=./uploads

# Database Configuration (Optional - for future features)
POSTGRES_DB=rnetai
POSTGRES_USER=rnetai
POSTGRES_PASSWORD=changeme

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Security Settings
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=*
REQUIRE_API_KEY=False  # Set to True in production
API_KEYS=  # Comma-separated list of API keys (leave empty to auto-generate)

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=5  # Maximum 5 generation requests per minute

# Caching
CACHE_ENABLED=True
CACHE_TTL_SECONDS=3600  # Cache results for 1 hour
CACHE_MAX_SIZE=100  # Maximum 100 cached items

# Monitoring and Logging
LOG_FILE=./logs/app.log
SENTRY_DSN=  # Optional - for error tracking

# Docker Compose Settings
COMPOSE_PROJECT_NAME=rnet-ai